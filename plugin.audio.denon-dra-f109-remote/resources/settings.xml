  <category label="Sound controls">
    <setting label="Display sound settings" type="bool" id="display_sound" default="true" />
    <setting visible="!eq(-1,False)" label="Volume" type="lsep" />
    <setting visible="!eq(-2,False)" label="Min. Volume" type="slider" id="vol_min" default="5" range="0,1,10" option="int" />
    <setting visible="!eq(-3,False)" label="Max. Volume" type="slider" id="vol_max" default="20" range="11,1,60" option="int" />
