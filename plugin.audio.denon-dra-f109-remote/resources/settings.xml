    <setting visible="!eq(-11,False)" enable="eq(-1,0)" label="Alarm input radio preset" type="slider" id="alarm_everyday_preset" default="1" range="1,1,40" option="int" />

    <setting visible="!eq(-12,False)" label="Onetime alarm settings" type="lsep" />
    <setting visible="!eq(-13,False)" label="Alarm start" type="time" id="alarm_once_start" />
    <setting visible="!eq(-14,False)" label="Alarm end" type="time" id="alarm_once_end" />
    <setting visible="!eq(-15,False)" label="Alarm input source" type="enum" id="alarm_once_source" values="preset|optical|cd|cdusb|net|netusb|analog1|analog2" default="0" />
    <setting visible="!eq(-16,False)" enable="eq(-1,0)" label="Alarm input radio preset" type="slider" id="alarm_once_preset" default="1" range="1,1,40" option="int" />
