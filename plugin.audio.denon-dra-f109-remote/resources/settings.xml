  <category label="Input sources">
    <setting label="Radio sources" type="lsep" />
    <setting label="FM Radio" type="bool" id="display_fm" default="true" />
    <setting label="DAB Radio" type="bool" id="display_dab" default="false" />
    <setting label="Radio presets" type="bool" id="display_presets" default="false" />
    <setting label="Tune" type="bool" id="display_preset" default="false" />

    <setting label="Physical input connectors" type="lsep" />
    <setting label="CD" type="bool" id="display_cd" default="true" />
    <setting label="Network" type="bool" id="display_net" default="true" />
    <setting label="Optical" type="bool" id="display_optical" default="true" />
    <setting label="Analog 1" type="bool" id="display_analog1" default="true" />
    <setting label="Analog 2" type="bool" id="display_analog2" default="true" />

    <setting label="Denon DCD-F109 logical sources" type="lsep" />
    <setting label="CD Audio" type="bool" id="display_cda" default="false" />
    <setting label="iPOD/USB" type="bool" id="display_usb" default="false" />

